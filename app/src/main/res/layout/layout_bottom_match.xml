<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shape_corner_30_alpha_black_8"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@null"
            android:fontFamily="sans-serif-medium"
            android:hint="@string/match_chat_hint"
            android:singleLine="true"
            android:textColor="@color/color_light_white"
            android:textColorHint="@color/color_light_white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/dp_5"
            android:singleLine="true"
            android:text="@string/match_chat_send"
            android:textColor="@color/color_orange"
            android:textSize="@dimen/sp_13"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
