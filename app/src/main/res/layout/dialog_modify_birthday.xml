<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/dp_10"
        android:text="@string/profile_save"
        android:textColor="@color/color_content"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.weigan.loopview.LoopView
            android:id="@+id/loop_year"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            android:layout_weight="1"
            app:awv_isLoop="false"
            app:awv_textsize="16" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop_month"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            android:layout_weight="1"
            app:awv_isLoop="false"
            app:awv_textsize="16" />

        <com.weigan.loopview.LoopView
            android:id="@+id/loop_day"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_200"
            android:layout_weight="1"
            app:awv_isLoop="false"
            app:awv_textsize="16" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_am_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_size_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/profile_modify_birthday_hint"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_13" />

</LinearLayout>
