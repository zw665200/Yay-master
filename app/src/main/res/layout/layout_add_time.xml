<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gilland"
        android:gravity="center"
        android:textColor="@color/color_timer"
        android:textSize="@dimen/sp_80" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_corner_orange"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="@dimen/sp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/sp_15"
        android:paddingBottom="@dimen/dp_5"
        android:text="@string/match_add_time"
        android:textColor="@color/color_title"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/add_time_bg"
        android:gravity="center"
        android:text="@string/match_add_time_tip"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

</LinearLayout>
