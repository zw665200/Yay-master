<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_modify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/et_modify_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_30"
        android:background="@drawable/shape_corner_light_grey"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:hint="@string/profile_modify_content_hint"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/color_content"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/shape_corner_yellow"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/profile_modify_commit"
        android:textColor="@color/color_content"
        android:textSize="@dimen/sp_16" />

</LinearLayout>