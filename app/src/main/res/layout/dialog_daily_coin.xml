<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xrtc_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableStart="@drawable/in_vip"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/prime_daily_coin_title"
            android:textColor="@color/color_purple"
            android:textSize="@dimen/sp_15" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xrtc_zsx" />

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="120"
                android:textColor="@color/color_purple_744df6"
                android:textSize="@dimen/sp_36"
                android:textStyle="bold" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/xrtc_an">

            <TextView
                android:id="@+id/btn_get_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/abc"
                android:gravity="center"
                android:text="@string/prime_daily_coin_get"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_25" />

        </FrameLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@drawable/match_d_close" />

</LinearLayout>